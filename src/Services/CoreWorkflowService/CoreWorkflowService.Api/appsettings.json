{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "Authentication": {
    "Jwt": {
      "Issuer": "https://acme-platform.local",
      "Audience": "core-workflow-api",
      "SecretKey": "your-256-bit-secret-key-here-change-in-production-environment",
      "ExpirationMinutes": 60,
      "ValidateIssuerSigningKey": true,
      "ValidateIssuer": true,
      "ValidateAudience": true,
      "ValidateLifetime": true,
      "ClockSkewSeconds": 300
    }
  },

  "RateLimiting": {
    "Global": {
      "PermitLimit": 80,
      "WindowSizeMinutes": 1,
      "QueueLimit": 8
    },
    "Api": {
      "PermitLimit": 50,
      "WindowSizeMinutes": 1,
      "QueueLimit": 5
    },
    "Integration": {
      "PermitLimit": 20,
      "WindowSizeMinutes": 1,
      "QueueLimit": 0
    }
  },

  "Messaging": {
    "RabbitMQ": {
      "HostName": "localhost",
      "UserName": "guest",
      "Password": "guest",
      "Exchange": "events"
    }
  }
}
